<div class='row'>
  <div class='col-md-12'>
    <div class='card mt-2'>
      <div class='card-body'>
        <a href="/students/add" class="btn btn-success float-right">Add New Student</a>
        <h2>Students</h2>
        <div class='table-responsive'>
          <table class='table'>
            <thead>

              <th>Student Num</th>
              <th>Full Name</th>
              <th>Email</th>
              <th>Addrress</th>
              <th>Status</th>
              <th>Course ID</th>
              <th></th>
            </thead>
            <tbody>
              {{#each students}}
                <tr>
                  <td>{{studentNum}}</td>
                  <td><a href='/student/{{studentNum}}'>{{firstName}}
                      {{lastName}}</a></td>
                  <td><a href='mailto:{{email}}'>{{email}}</a></td>
                  <td>{{addressStreet}}, {{addressCity}}</td>
                  <td>{{status}}</td>
                  <td><a href='/students?courseId={{course}}'>{{course}}</a> </td>
                  <td><a href='/student/delete/{{studentNum}}' class="btn btn-sm btn-danger">remove</a> </td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  {{#unless students}}
    <div class='col-md-12 text-center'>
      <strong>{{message}}</strong>
    </div>
  {{/unless}}
</div>