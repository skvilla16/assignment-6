<div class='row'>
  <div class='col-md-12'>
    <div class='card mt-2'>
      <div class='card-body'>
        <a href="/courses/add" class="btn btn-success float-right">Add New Course</a>
        <h2>Courses</h2>
        <div class='table-responsive'>
          <table class='table'>
            <thead>

              <th>Course Code</th>
              <th>Course Description</th>
              <th></th>
            </thead>
            <tbody>
              {{#each courses}}
                <tr>
                  <td><a href='/course/{{courseId}}'>{{courseCode}}</a></td>
                  <td><a
                      href='/students?courseId={{courseId}}'
                    >{{courseDescription}}</a>
                  </td>
                  <td><a href='/course/delete/{{courseId}}' class="btn btn-danger">remove</a></td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  {{#unless courses}}
    <div class='col-md-12 text-center'>
      <strong>{{message}}</strong>
    </div>
  {{/unless}}
</div>